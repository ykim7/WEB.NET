@model IEnumerable<YJK2237A2.Models.TrackWithDetailViewModel>

@{
        string actionName = ViewContext.RouteData.GetRequiredString("action");
        string title = "All Tracks";
        switch (actionName)
        {
            case "BluesJazz":
                title = "Blues & Jazz Tracks";
                break;
            case "CantrellStaley":
                title = "Cantrell & Staley Tracks";
                break;
            case "Top50Longest":
                title = "Top 50 Longest Tracks";
                break;
            case "Top50Smallest":
                title = "Top 50 Smallest Tracks";
                break;
            case "Index":
                 title = "All Tracks";
                break;
        }
        ViewBag.Title = title;
    }


<h2>@title</h2>

<p>
    @Html.ActionLink("All Tracks", "Index") |
    @Html.ActionLink("Blues & Jazz Tracks", "BluesJazz") |
    @Html.ActionLink("Cantrell & Staley Tracks", "CantrellStaley") |
    @Html.ActionLink("Top 50 Longest Tracks", "Top50Longest") |
    @Html.ActionLink("Top 50 Smallest Tracks", "Top50Smallest")
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Composer)</th>
            <th>@Html.DisplayNameFor(model => model.Milliseconds)</th>
            <th>@Html.DisplayNameFor(model => model.Bytes)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th>@Html.DisplayNameFor(model => model.AlbumTitle)</th>
            <th>@Html.DisplayNameFor(model => model.GenreName)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Composer)</td>
                <td>@Html.DisplayFor(modelItem => item.Milliseconds)</td>
                <td>@Html.DisplayFor(modelItem => item.Bytes)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.AlbumTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
            </tr>
        }
    </tbody>
</table>
