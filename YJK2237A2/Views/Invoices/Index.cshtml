@model IEnumerable<YJK2237A2.Models.InvoiceBaseViewModel>

@{
    ViewBag.Title = "Invoices";
}

<h2>Invoices</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Billing Address</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Postal/Zip</th>
            <th>Date</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.BillingAddress</td>
                <td>@item.BillingCity</td>
                <td>@item.BillingState</td>
                <td>@item.BillingCountry</td>
                <td>@item.BillingPostalCode</td>
                <td>@item.InvoiceDate.ToString("MMM d, yyyy")</td>
                <td>@String.Format("{0:C}", @item.Total)</td>
                <td>
                    @Html.ActionLink("Details", "Detail", new { id = item.InvoiceId })
                </td>
            </tr>
        }
    </tbody>
</table>
